# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration (Supabase)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# LLM Configuration
# Option 1: OpenAI (requires API key, has free credits)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Option 2: Ollama (completely free, local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Use local LLM (true) or OpenAI (false)
USE_LOCAL_LLM=true

# Application Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Development Settings
DEBUG=true
LOG_LEVEL=INFO

# Frontend Environment (for Vercel deployment)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Railway/Render Deployment (Backend)
PORT=8000
RAILWAY_STATIC_URL=your-railway-app-url.railway.app

# File Upload Limits
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=xlsx,xls,csv